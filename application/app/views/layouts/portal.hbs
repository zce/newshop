{{!< basic}}

{{#contentFor 'head'}}
<link rel="stylesheet" href="/assets/css/common.css">
{{{block 'styles'}}}
{{/contentFor}}

<!--页面顶部-->
<div id="nav-bottom">
  <!--顶部-->
  <div class="nav-top">
    <div class="top">
      <div class="py-container">
        <div class="shortcut">
          <ul class="fl">
            <li class="f-item">品优购欢迎您！</li>
            <li class="f-item">
              {{#@user}}
              欢迎【<a href="/member">{{username}}</a>】 <a href="/account/logout">退出</a>
              {{else}}
              请 <a href="/account/login{{^equal @req.url '/'}}?redirect={{escape @req.url}}{{/equal}}">登录</a> <a href="/account/register{{^equal @req.url '/'}}?redirect={{escape @req.url}}{{/equal}}">免费注册</a>
              {{/@user}}
            </li>
          </ul>
          <ul class="fr">
            <li class="f-item">
              <a href="/member/order">我的订单</a>
            </li>
            <li class="f-item space"></li>
            <li class="f-item">
              <a href="/member">我的品优购</a>
            </li>
            <li class="f-item space"></li>
            <li class="f-item">关注品优购</li>
            <li class="f-item space"></li>
            <li class="f-item">网站导航</li>
          </ul>
        </div>
      </div>
    </div>

    <!--头部-->
    <div class="header">
      <div class="py-container">
        <div class="yui3-g Logo">
          <div class="yui3-u Left logoArea">
            <a class="logo-bd" title="品优购" href="/"></a>
          </div>
          <div class="yui3-u Center searchArea">
            <div class="search">
              <form action="/search" class="sui-form form-inline">
                <div class="input-append">
                  <input type="text" name="q" type="text" class="input-error input-xxlarge" value="{{q}}">
                  <button class="sui-btn btn-xlarge btn-danger">搜索</button>
                </div>
              </form>
            </div>
            <div class="hotwords">
              <ul>
                {{#each settings.search_hotwords}}
                <li class="f-item"><a href="/search?q={{this}}">{{this}}</a></li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class="yui3-u Right shopArea">
            <div class="fr shopcar">
              <div class="show-shopcar">
                <span class="car"></span>
                <a class="sui-btn btn-default btn-xlarge" href="/cart">
                  <span>我的购物车</span>
                  <i class="shopnum">{{cart.totalAmount}}</i>
                </a>
                <div class="clearfix shopcarlist">
                  {{#if cart.totalAmount}}
                  <ul>
                    {{#each cart.products}}
                    <li>{{name}}</li>
                    {{/each}}
                  </ul>
                  {{else}}
                  <p>"啊哦，你的购物车还没有商品哦！"</p>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="yui3-g NavList">
          {{> nav-menu}}
          <div class="yui3-u Center navArea">
            <ul class="nav">
              <li class="f-item">服装城</li>
              <li class="f-item">美妆馆</li>
              <li class="f-item">品优超市</li>
              <li class="f-item">全球购</li>
              <li class="f-item">闪购</li>
              <li class="f-item">团购</li>
              <li class="f-item">有趣</li>
              <li class="f-item">秒杀</li>
            </ul>
          </div>
          <div class="yui3-u Right"></div>
        </div>
      </div>
    </div>
  </div>
</div>

