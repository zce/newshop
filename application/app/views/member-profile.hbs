      // Object URL
      // 是一种页面级别给媒体对象分配的临时 URL 生命周期到 DOM 销毁为止或者手动吊销
      var $this = $(this)
      if (!$this.prop('files')[0]) return
      var file = $this.prop('files')[0]
      var url = URL.createObjectURL(file)
      $this.prev().fadeOut(function () {
        $(this).attr('src', url).fadeIn()
      })
    })
  })
</script>
